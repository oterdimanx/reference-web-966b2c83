name: One-Shot Repo Sync

on:
  workflow_dispatch:  # Manual trigger

jobs:
  sync:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout source repository
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Copy source files to a temporary directory
        run: |
          mkdir /tmp/source
          rsync -av --exclude='.git' ./ /tmp/source/

      - name: Checkout target repository
        uses: actions/checkout@v4
        with:
          repository: oterdimanx/reference-web
          ref: main
          token: ${{ secrets.GH_PAT }}
          path: target-repo

      - name: Sync source to target repo
        run: |
          rsync -av --delete /tmp/source/ ./target-repo/
          cd target-repo
          git config user.name "github-actions[bot]"
          git config user.email "github-actions[bot]@users.noreply.github.com"
          git add .
          git commit -m "Full sync from source repo" || echo "Nothing to commit"
          git push origin main
